<%- include('../../header.ejs')%>
<section class="dashboard-wrap mtb-40">
  <div class="container">
    <div class="body-content">
      <div class="row">
        <div class="col-md-3">
          <div class="dash-left">
            <ul>
              <li class="active"><a href="/admin/dashboard">Dashboard</a></li>
              <li><a href="/admin/blogdisplay" class="active">Blogs</a></li>
              <li><a href="/admin/category">Categories</a></li>
              <li><a href="/admin/contactdisplay">Contact</a></li>
              <li><a href="/admin/about">About</a></li>
              <li><a href="/logout">Logout</a></li>
            </ul>
          </div>
        </div>
        <div class="col-md-9">
          <div class="dash-right">
            <div class="dash-header">
              <div class="dash-title">
                <h1>Edit Blog of <%= b._id %></h1>
              </div>
              
            </div>
            <form method="post" action="/blogupdate/<%= b._id %>" enctype="multipart/form-data">
              <!-- <div class="form-group form-row">
                            <label class="col-md-3 required">Upload Image *</label>
                            <div class="col-md-9">
                              <input type="file"  name="filename" class="form-control" formControlName="image">
                            </div>
                        </div> -->
              <div class="form-group form-row">
                <label class="col-md-3 required">Title *</label>
                <div class="col-md-9">
                  <input
                    type="text"
                    value="<%= b.title %>"
                    class="form-control"
                    name="title"
                    placeholder="Title"
                    required
                  />
                </div>
              </div>
              <div class="form-group form-row">
                          <label class="col-md-3">Upload Image</label>
                          <div class="col-md-9">
                            <input type="file" name="image" class="form-control" id="image" />
                            <img src="<%= b.image.url %>" width="200px" height="200px">
                          </div>
                        </div>
              <div class="form-group form-row">
                <label class="col-md-3 required">Description *</label>
                <div class="col-md-9">
                  <textarea
                    name="description"
                    rows="5"
                    class="form-control"
                    placeholder="Description"
                    required
                  ><%= b.description %></textarea> 
                </div>
              </div>

              <div class="form-group form-row">
                <label class="col-md-3"></label>
                <div class="col-md-9">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%- include('../../footer.ejs')%>